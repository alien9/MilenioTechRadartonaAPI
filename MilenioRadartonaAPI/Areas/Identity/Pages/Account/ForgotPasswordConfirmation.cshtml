@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = null;
}

<style>
    .quadrado-central {
        top: -120px;
        position: absolute;
    }

    body {
        background: #000000 !important;
        margin: 0px !important;
    }



    div.absolute {
        width: 100%;
        margin-top: 150px;
        margin-left: 15%; /* RESPONSIVIDADE */
        position: absolute;
    }

    div.info-show-container > div.info-show {
        overflow: hidden;
        position: relative;
        top: 0;
        z-index: -10;
        width: 100%; /* RESPONSIVIDADE */
        height: 100%;
    }

        div.info-show-container > div.info-show > video {
            width: 100%;
            height: auto;
            overflow: hidden;
            z-index: 1;
        }

    div.info-show-container {
        background: #00000033;
        width: 100%;
        max-height: 100%;
        height: auto;
        position: relative;
        overflow: hidden;
    }

        div.info-show-container > div.info-show {
            overflow: hidden;
            position: relative;
            top: 0;
            z-index: -10;
            width: 100%; /* RESPONSIVIDADE */
            height: 100%;
        }

            div.info-show-container > div.info-show > video {
                width: 100%;
                height: auto;
                overflow: hidden;
                z-index: 1;
            }


    div.frente {
        top: 15%;
        margin-left: auto;
        z-index: 1000;
        position: absolute;
    }

    h2 {
        font-size: 28px;
        text-transform: lowercase;
    }

    #login img {
        margin: 10px 0;
        width: 120px;
        height: auto;
    }

    #login .center {
        text-align: center;
    }

    #login .login {
        max-width: 300px;
        margin: 35px auto;
    }

    #login .login-form {
        padding: 0px 25px;
    }
</style>

<link rel="icon" href="~/img/logo-milenio-bus-transparente.png" />
<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">

<div class="info-show-container">
    <div class="absolute">
        <div class="row">
            <div class="sumiu">
                <div class="row">
                    <div class="col-sm-4 col-lg-4 icone-main-vd-div">
                        <div class="row w-100">
                            <div class="frente">
                                <section class="quadrado-central">
                                    <div id="login" class="container">
                                        <div class="row">
                                            <div class="span12">
                                                <div class="login well well-small">
                                                    <div class="center">
                                                        <img src="~/images/logo-milenio-bus-white.png" alt="logo">
                                                    </div>
                                                    <form method="post" class="login-form">
                                                        <h4 class=" text-center">Verifique seu e-mail :D</h4>
                                                        <hr />
                                                        <div class="w-100">
                                                            <a class="text-warning" asp-controller="Home" asp-action="Index"> - Voltar a página inicial.</a>
                                                        </div>
                                                    </form>
                                                </div><!--/.login-->
                                            </div><!--/.span12-->
                                        </div><!--/.row-fluid-->
                                    </div><!--/.container-->
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="info-show">
        <video autoplay loop poster="~/images/bgs/bg-fundo-interno.png">
            <source src="~/videos/bg-interno-comprimido.mp4" type="video/mp4">
        </video>
    </div>
</div>

