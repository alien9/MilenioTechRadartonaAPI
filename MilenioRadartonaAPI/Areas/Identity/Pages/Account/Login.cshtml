@page
@using MilenioRadartonaAPI.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<style>
    button:hover, p.rounded-pill {
        cursor: pointer;
        transition-duration: 150ms;
        border-radius: 5px;
    }


</style>


<div class="container mt-5 pt-5">
    <div class="row mt-5 mb-5">
        <div class="col-md-12 col-lg-4">
            <h1 class="text-dark text-center display-3">Entrar</h1>
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-dark border text-light w-100 p-3">Entrar com sua conta.</button>
                    </div>
                    <div class="form-group mt-4">
                        <p class="bg-dark text-center border rounded-pill mb-2 p-1" style="width: auto; font-size: 15px;">
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </p>
                        <p class="bg-dark text-center border rounded-pill mb-5 p-1" style="width: auto; font-size: 15px;">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre uma nova conta.</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-12 col-lg-8">
            <div class="h-pequeno mt-5">

                <!--Carousel Wrapper-->
                <div id="video-carousel-example2" class="carousel slide carousel-fade" data-ride="carousel">
                    <!--Indicators-->
                    <ol class="carousel-indicators">
                        <li data-target="#video-carousel-example2" data-slide-to="0" class="active"></li>
                        <li data-target="#video-carousel-example2" data-slide-to="1"></li>
                        <li data-target="#video-carousel-example2" data-slide-to="2"></li>
                    </ol>
                    <!--/.Indicators-->
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        <!-- First slide -->
                        <div class="carousel-item active">
                            <!--Mask color-->
                            <div class="view">
                                <!--Video source-->
                                <iframe width="100%" height="480" src="https://www.youtube.com/embed/YuP9UGtHfPA" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <div class="mask rgba-indigo-light"></div>
                            </div>

                            <!--Caption-->
                            <div class="carousel-caption">
                                <div class="animated fadeInDown">
                                    <h3 class="h3-responsive">Light mask</h3>
                                    <p>First text</p>
                                </div>
                            </div>
                            <!--Caption-->
                        </div>
                        <!-- /.First slide -->
                        <!-- Second slide -->
                        <div class="carousel-item">
                            <!--Mask color-->
                            <div class="view">
                                <iframe width="100%" height="480" src="https://www.youtube.com/embed/1HzI5TTh7Mk" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>                                
                                <div class="mask rgba-purple-slight"></div>
                            </div>

                            <!--Caption-->
                            <div class="carousel-caption">
                                <div class="animated fadeInDown">
                                    <h3 class="h3-responsive">Super light mask</h3>
                                    <p>Secondary text</p>
                                </div>
                            </div>
                            <!--Caption-->
                        </div>
                        <!-- /.Second slide -->
                        <!-- Third slide -->
                        <div class="carousel-item">
                            <!--Mask color-->
                            <div class="view">
                                <iframe width="100%" height="480" src="https://www.youtube.com/embed/UJOALAGpYb0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <div class="mask rgba-black-strong"></div>
                            </div>

                            <!--Caption-->
                            <div class="carousel-caption">
                                <div class="animated fadeInDown">
                                    <h3 class="h3-responsive">Strong mask</h3>
                                    <p>Third text</p>
                                </div>
                            </div>
                            <!--Caption-->
                        </div>
                        <!-- /.Third slide -->
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#video-carousel-example2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#video-carousel-example2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                </div>
                <!--Carousel Wrapper-->
            </div>
        </div>




    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

