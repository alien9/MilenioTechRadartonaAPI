@model MilenioRadartonaAPI.DTO.LoginOptimusDTO

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Optimus - login!</title>

    <style>

        body {
            background-image: url('../images/bgs/bg-fundo-interno.png');
            background-size: cover;
        }

        #insivisel {
            color: #ffffff00;
            background: #ffffff00;
            border-color: #ffffff00;
        }
    </style>

</head>
<body>


    <!-- Button trigger modal -->
    <button id="insivisel" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        dfsdfd
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="container-fluid">
                        <div class="col-12">
                            <div class="w-100 text-center mb-3">
                                <img src="~/images/logo-milenio-bus-white.png" width="100px">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="w-100">
                                <h5 class="modal-title text-center" id="exampleModalCenterTitle">Login</h5>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="modal-body">
                        <form asp-action="Main" method="post" class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" style="width: 100%!important;" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Senha" class="control-label"></label>
                                <input asp-for="Senha" type="password" class="form-control" style="width: 100%!important;" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Entrar" asp-action="Main" class="btn btn-primary" style="width: 100%!important; border-radius: 20px;" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a type="submit" class="btn btn-secondary rounded" asp-controller="Home" asp-action="Index">Voltar</a>
                    </div>
                </div>
        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#insivisel').click();


        });

    </script>
</body>
</html>